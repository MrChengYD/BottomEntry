<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:clipChildren="false"
    android:orientation="vertical">
    <include
        android:id="@+id/sheet_voice_dialog"
        layout="@layout/sheet_voice_dialog"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/menus_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/tab_padding_top"
        android:paddingBottom="@dimen/tab_padding_bottom"
        android:paddingStart="@dimen/layout_padding_horizontal"
        android:paddingEnd="@dimen/layout_padding_horizontal"
        android:gravity="bottom"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/icon_padding_vertical"
            android:paddingBottom="@dimen/icon_padding_vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/bottomSheet_menus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/menu_moreFunction"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/icon_menu"/>
                <ImageView
                    android:id="@+id/menu_camera"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginStart="@dimen/icon_margin_start"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/icon_camera"/>
                <ImageView
                    android:id="@+id/menu_photo"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginStart="@dimen/icon_margin_start"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/icon_photo"/>
                <ImageView
                    android:id="@+id/menu_mic"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginStart="@dimen/icon_margin_start"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/icon_mic"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/menu_switch"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_toEndOf="@+id/bottomSheet_menus"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:background="@drawable/shape_corner_edittext">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/bottomSheet_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="@dimen/editText_min_height"
                    android:maxHeight="@dimen/editText_max_height"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:inputType="textMultiLine"
                    android:minLines="1"
                    android:maxLines="5"
                    android:gravity="start|center"
                    android:hint="@string/editText_hint"
                    android:textSize="17sp"
                    android:lineSpacingMultiplier="1.1"
                    android:lineSpacingExtra="1dp"
                    android:background="@null"/>
                <ImageView
                    android:id="@+id/sheet_emoji"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginBottom="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/icon_emoji"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/send_padding_vertical"
            android:paddingBottom="@dimen/send_padding_vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginStart="@dimen/icon_margin_start"
            android:clickable="false"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/shape_corner_send_un">
            <TextView
                android:layout_width="@dimen/send_width"
                android:layout_height="@dimen/icon_size"
                android:text="@string/send"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/sheet_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:clipChildren="false"
        layout="@layout/sheet_photo"
        android:layout_marginTop="45dp"
        android:visibility="gone"/>

</FrameLayout>